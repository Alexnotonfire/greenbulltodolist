<h1>Log In</h1>

<%= form_tag '/authenticate' do %>
  <div class="email">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="password">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="button">
    <%= submit_tag "Log In", class:'btn btn-default' %>
  </div>
<% end %>
